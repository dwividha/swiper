{
  "name": "Swiper",
  "version": "0.1",
  "description": "Swiper, no swiping!",
  "permissions": [
  	"activeTab",
  	"declarativeContent",
  	"storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
   {
     "matches": ["https://tinder.com/*"],
     "run_at": "document_idle",
     "js": ["tinerd.js"]
   }
 ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/tinerd-ico.png"
    }
  },
  "icons": {
    "128": "images/tinerd-ico.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}